<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">


    <!-- Define persistence unit -->
    <persistence-unit name="databaseOtilia" >

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://moktok.intecbrussel.org:33062/otilia"/>
            <property name="javax.persistence.jdbc.user" value="otilia"/>
            <property name="javax.persistence.jdbc.password" value="otilia"/>

            <!-- Defineer je dialect-->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <!-- Verander of je none doet, de database update, validate, create of create-drop-->
            <property name ="hibernate.hbm2ddl.auto" value="update"/>
            <property name = "hibernate.show_sql" value = "true" />

        </properties>
    </persistence-unit>

    <!-- Define persistence unit -->
    <persistence-unit name="movieDatabase">
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://moktok.intecbrussel.org:33062/movies" />
            <property name="javax.persistence.jdbc.user" value="movieUser" />
            <property name="javax.persistence.jdbc.password" value="movieBase" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <!-- Verander of je none doet, de database update, validate, create of create-drop-->
            <property name="hibernate.hbm2ddl.auto" value="none"/>

        </properties>
    </persistence-unit>


</persistence>